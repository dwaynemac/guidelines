<h1>Listing people</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Institution</th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%=h person.name %></td>
    <td><%=h person.institution.try :name %></td>
    <%- if can? :modify, person -%>
      <td><%= link_to( t('Edit'), edit_person_path(person)) if can? :update, person %></td>
      <td><%= link_to( t('Destroy'), person, :confirm => 'Are you sure?', :method => :delete) if can? :delete, person %></td>
    <%- end -%>
  </tr>
<% end %>
</table>

<%- if can? :create, Person -%>
  <br />
  <%= link_to 'New person', new_person_path %>
<%- end -%>