<%- semantic_form_for @user do |f| -%>
  <%- f.inputs do -%>
    <%= f.input :drc_user %>
    <%= f.input :institution, :collection => @institutions -%>
    <%= f.input :role, :collection => User::ROLES %>
    <%= f.input :authorized %>
  <%- end -%>
  <%- f.buttons do -%>
    <%= f.commit_button -%>
  <%- end -%>
<%- end -%>