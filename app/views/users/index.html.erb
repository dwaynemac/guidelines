<table>
  <tr>
    <th><%= t('user.labels.drc_user') %></th>
    <th><%= t('user.labels.allowed') %></th>
    <th><%= t('user.lables.role') %></th>
    <th><%= t('user.labels.intitution_name') %></th>
  </tr>
  <%- @users.each do |user| -%>
    <tr>
      <td><%= user.drc_user %></td>
      <td><%= user.allowed? %></td>
      <td><%= user.role %></td>
      <td><%= user.institution.try(:name) %></td>
      <td><%= link_to(t('edit'), edit_user_path(user)) %></td>
    </tr>
  <%- end -%>
</table>
