<h1><%= t('goals.new.title') %></h1>

<%- if params[:goal_id]
      scope = [:goal, @goal]
    else
      scope = @goal
    end -%>

<%- semantic_form_for scope do |f| -%>
  <%- f.inputs do -%>
    <%= render :partial => 'form', :locals => {:f => f} %>
  <%- end -%>
  <%- f.buttons do -%>
    <%= f.commit_button %>
  <%- end -%>
<%- end -%>

<%= link_to t('back'), goals_path %>