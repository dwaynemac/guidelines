<table>
  <tr>
    <th></th>
    <th>Objective</th>
    <th>Value</th>
    <th>Control item</th>
    <th>Federation</th>
    <th>Responsable</th>
    <th>Due on</th>
  </tr>

  <% goals.each do |goal| %>
    <tr>
      <td><%= h goal.id_number %></td>
      <td><%= h goal.objective %></td>
      <td><%= h goal.value %></td>
      <td><%= h goal.control_item %></td>
      <td><%=h goal.institution.try :name %></td>
      <td><%= h goal.responsable.try :name %></td>
      <td><%= h goal.due_on %></td>
      <td><%= link_to(t('goal.add_followup'), new_goal_followup_path(:goal_id => goal)) %></td>
      <td><%= link_to t('Show'), goal %></td>
      <td><%= link_to t('Edit'), edit_goal_path(goal) %></td>
      <td><%= link_to t('Destroy'), goal, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>